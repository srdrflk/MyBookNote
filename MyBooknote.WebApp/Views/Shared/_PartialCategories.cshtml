@using MyBooknote.BusinessLayer
@using MyBooknote.Entities

@{
    CategoryManager cm = new CategoryManager();
    List<Category> list = cm.List();
}

<h1 class="my-4">Kategoriler</h1>
<div class="list-group">
    <a href="/Home/Index" class="list-group-item"><span class="fa fa-long-arrow-right"></span> Tümü</a>

    @foreach (Category item in list)
    {
        <a href="/Home/ByCategory/@item.Id" title="@item.Description" class="list-group-item"><span class="fa fa-long-arrow-right"></span>@item.Title </a>
    }

</div>
